<Window
    x:Class="WindowsEdgeLight.UpdateDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Update Available"
    Width="600"
    Height="500"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock
                FontSize="20"
                FontWeight="SemiBold"
                Text="ðŸŽ‰ Update available" />
            <TextBlock
                x:Name="VersionText"
                Margin="0,4,0,0"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                Text="Version X.X.X is now available!" />
        </StackPanel>

        <!--  Release Notes Header  -->
        <TextBlock
            Grid.Row="1"
            Margin="0,0,0,12"
            FontWeight="SemiBold"
            Text="Release notes" />

        <!--  Release Notes  -->
        <Border
            Grid.Row="2"
            Margin="0,0,0,24"
            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock
                    x:Name="ReleaseNotesText"
                    Margin="12"
                    FontFamily="Consolas"
                    FontSize="12"
                    LineHeight="18"
                    TextWrapping="Wrap" />
            </ScrollViewer>
        </Border>

        <!--  Buttons  -->
        <StackPanel
            Grid.Row="3"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="SkipButton"
                Margin="0,0,8,0"
                Click="SkipButton_Click"
                Content="Skip this version"
                Cursor="Hand" />

            <Button
                x:Name="RemindLaterButton"
                Margin="0,0,8,0"
                Click="RemindLaterButton_Click"
                Content="Remind me later"
                Cursor="Hand" />

            <Button
                x:Name="DownloadButton"
                Click="DownloadButton_Click"
                Content="Download &amp; install"
                Cursor="Hand"
                Style="{StaticResource AccentButtonStyle}" />
        </StackPanel>
    </Grid>
</Window>
